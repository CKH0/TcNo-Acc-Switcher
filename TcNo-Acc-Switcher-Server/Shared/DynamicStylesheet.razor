@using TcNo_Acc_Switcher_Server.Data
@inject AppSettings AppSettings
<style>
    :root {
        /* Selection */
        --selectionColor: @AppSettings.Stylesheet["selectionColor"]; /*#402B00;*/
        --selectionBackground: @AppSettings.Stylesheet["selectionBackground"]; /*#FFAA00;*/
        /* Context Menu (Right-click menu) */
        --contextMenuBackground: @AppSettings.Stylesheet["contextMenuBackground"]; /*#14151E;*/
        --contextMenuBackground-hover: @AppSettings.Stylesheet["contextMenuBackground-hover"]; /*#1B2737;*/
        --contextMenuLeftBorder-hover: @AppSettings.Stylesheet["contextMenuLeftBorder-hover"]; /*#364E6E;*/
        --contextMenuTextColor: @AppSettings.Stylesheet["contextMenuTextColor"]; /*#B0BEC5;*/
        --contextMenuTextColor-hover: @AppSettings.Stylesheet["contextMenuTextColor-hover"]; /*#FFFFFF;*/
        /* Headerbar */
        --headerbarBackground: @AppSettings.Stylesheet["headerbarBackground"]; /*#14151E;*/
        --windowControlsBackground-hover: @AppSettings.Stylesheet["windowControlsBackground-hover"]; /*rgba(255,255,255,0.1);*/
        --windowControlsBackground-active: @AppSettings.Stylesheet["windowControlsBackground-active"]; /*rgba(255,255,255,0.2);*/
        --windowControlsCloseBackground: @AppSettings.Stylesheet["windowControlsCloseBackground"]; /*#E81123;*/
        --windowControlsCloseBackground-active: @AppSettings.Stylesheet["windowControlsCloseBackground-active"]; /*#F1707A;*/
        --windowTitleColor: @AppSettings.Stylesheet["windowTitleColor"]; /*white;*/
        /* Footerbar */
        --footerBackground: @AppSettings.Stylesheet["footerBackground"]; /*#222;*/
        --footerColor: @AppSettings.Stylesheet["footerColor"]; /*#DDD;*/
        /* Scrollback */
        --scrollbarTrackBackground: @AppSettings.Stylesheet["scrollbarTrackBackground"]; /*#1F202D;*/
        --scrollbarThumbBackground: @AppSettings.Stylesheet["scrollbarThumbBackground"]; /*#515164;*/
        --scrollbarThumbBackground-hover: @AppSettings.Stylesheet["scrollbarThumbBackground-hover"]; /*#555;*/
        /* Account Switcher */
        --accountPColor: @AppSettings.Stylesheet["accountPColor"]; /*#DDD;*/
        --accountColor: @AppSettings.Stylesheet["accountColor"]; /*white;*/
        --accountBackground-hover: @AppSettings.Stylesheet["accountBackground-hover"]; /*#28374E;*/
        --accountBorder-hover: @AppSettings.Stylesheet["accountBorder-hover"]; /*#2777A4;*/
        --accountBackground-checked: @AppSettings.Stylesheet["accountBackground-checked"]; /*#274560;*/
        --accountBorder-checked: @AppSettings.Stylesheet["accountBorder-checked"]; /*#26A0DA;*/
        /* Main items */
        --mainBackground: @AppSettings.Stylesheet["mainBackground"]; /*#28293A;*/
        --borderedItemBorderColor: @AppSettings.Stylesheet["borderedItemBorderColor"]; /*#888;*/
        --borderedItemBorderColor-focus: @AppSettings.Stylesheet["borderedItemBorderColor-focus"]; /*#888;*/
        --borderedItemBorderColorBottom-focus: @AppSettings.Stylesheet["borderedItemBorderColorBottom-focus"]; /*#888;*/
        --defaultTextColor: @AppSettings.Stylesheet["defaultTextColor"]; /*white;*/
        /* Links */
        --linkColor: @AppSettings.Stylesheet["linkColor"]; /*#FFAA00;*/
        --linkColor-hover: @AppSettings.Stylesheet["linkColor-hover"]; /*#FFDD00;*/
        --linkColor-active: @AppSettings.Stylesheet["linkColor-active"]; /*#CC7700;*/
        /* Buttons */
        --buttonBackground: @AppSettings.Stylesheet["buttonBackground"]; /*#333;*/
        --buttonBackground-active: @AppSettings.Stylesheet["buttonBackground-active"]; /*#222;*/
        --buttonBackground-hover: @AppSettings.Stylesheet["buttonBackground-hover"]; /*#444;*/
        --buttonBorder: @AppSettings.Stylesheet["buttonBorder"]; /*#888;*/
        --buttonBorder-active: @AppSettings.Stylesheet["buttonBorder-active"]; /*#FFAA00;*/
        --buttonColor: @AppSettings.Stylesheet["buttonColor"]; /*white;*/
        --checkboxBorder: @AppSettings.Stylesheet["checkboxBorder"]; /*white;*/
        --checkboxBorder-checked: @AppSettings.Stylesheet["checkboxBorder-checked"]; /*white;*/
        --checkboxBackground: @AppSettings.Stylesheet["checkboxBackground"]; /*#FFAA00;*/
        --checkboxBackground-checked: @AppSettings.Stylesheet["checkboxBackground-checked"]; /*#FFAA00;*/
        /* Input (Number, Text) */
        --inputBackground: @AppSettings.Stylesheet["inputBackground"]; /*#212529;*/
        --inputColor: @AppSettings.Stylesheet["inputColor"]; /*white;*/
        /* Select list (eg. .forgotttenList) */
        --listBackground: @AppSettings.Stylesheet["listBackground"]; /*#222;*/
        --listColor: @AppSettings.Stylesheet["listColor"]; /*white;*/
        --listColor-checked: @AppSettings.Stylesheet["listColor-checked"]; /*white;*/
        --listTextColor-before: @AppSettings.Stylesheet["listTextColor-before"]; /*#FFAA00;*/ /* little ">" before item on list */
        --listTextColor-before-checked: @AppSettings.Stylesheet["listTextColor-before-checked"]; /*#945300;*/
        --listTextColor-after: @AppSettings.Stylesheet["listTextColor-after"]; /*#3DFF89;*/ /* eg. SteamID after entry on list */
        --listTextColor-after-checked: @AppSettings.Stylesheet["listTextColor-after-checked"]; /*#00A340;*/
        /* Settings window */
        --settingsHeaderColor: @AppSettings.Stylesheet["settingsHeaderColor"]; /*white;*/
        --settingsHeaderHrBorder: @AppSettings.Stylesheet["settingsHeaderHrBorder"]; /*#BBB;*/
        /* Modal */
        --modalBackground: @AppSettings.Stylesheet["modalBackground"]; /*#00000055;*/
        --modalInputBackground: @AppSettings.Stylesheet["modalInputBackground"]; /*#222;*/
        /* Modal Folder Indicator */
        --foundColor: @AppSettings.Stylesheet["foundColor"]; /*lime;*/
        --foundBackground: @AppSettings.Stylesheet["foundBackground"]; /*green;*/
        --notFoundColor: @AppSettings.Stylesheet["notFoundColor"]; /*red;*/
        --notFoundBackground: @AppSettings.Stylesheet["notFoundBackground"]; /*darkred;*/
        /* Steam */
        --limited: @AppSettings.Stylesheet["limited"]; /*yellow;*/
        --vac: @AppSettings.Stylesheet["vac"]; /*red;*/
    }
</style>