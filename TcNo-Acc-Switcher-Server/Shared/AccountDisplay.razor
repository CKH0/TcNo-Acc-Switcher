<input type="radio" id="@Username" class="acc" name="accounts" Username="@Username" SteamId64="@SteamId64" Line1="@Line1" Line2="@Line2" Line3="@Line3" ExtraClasses="" onchange="SelectedItemChanged()" />
<label for="@Username" class="acc">
    <img src="@ImageUrl" alt="PFP"/>
    <p>@Line1</p>
    <h6>@Line2</h6>
    <p>@Line3</p>
</label>

@code {
    [Parameter] public string Username { get; set; }
    [Parameter] public string ImageUrl { get; set; }
    [Parameter] public string SteamId64 { get; set; }
    [Parameter] public string Line1 { get; set; }
    [Parameter] public string Line2 { get; set; }
    [Parameter] public string Line3 { get; set; }
}
