@page "/Ubisoft/Settings"
@namespace TcNo_Acc_Switcher_Server.Pages.Ubisoft
@inject NavigationManager NavManager
@{ AppData.SetActiveNavMan(NavManager); }
@inject Data.Settings.Ubisoft Ubisoft
@inject Data.AppSettings AppSett
@inject IJSRuntime JsRuntime
@{ AppData.SetActiveIJsRuntime(JsRuntime); }

<div class="container mainblock">
    <div class="row">
        <div class="col-md-12 col-lg-9 col-xl-8 mx-auto settingsCol">
            <toastarea />
            <div class="SettingsHeader">
                <hr><span>App-wide settings</span>
                <hr>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="StreamerMode" @bind="AppSett.StreamerModeEnabled"><label class="form-check-label" for="StreamerMode"></label></div><label for="StreamerMode">Enable streamer mode<br></label>
            </div>
            <div class="SettingsHeader">
                <hr><span>General settings</span>
                <hr>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_Admin" @bind="Ubisoft.Admin"><label class="form-check-label" for="Steam_Admin"></label></div><label for="Steam_Admin">Run Steam as Admin<br></label>
            </div>
            <div class="SettingsHeader">
                <hr><span>Shortcuts</span>
                <hr>
            </div>
            <div class="columnSetting">
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_DesktopShortcut" @bind="Ubisoft.DesktopShortcut" @onclick="() => Ubisoft.DesktopShortcut_Toggle()"><label class="form-check-label" for="Steam_DesktopShortcut"></label></div><label for="Steam_DesktopShortcut">Desktop shortcut<br></label>
            </div>
            <div class="columnSetting">
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_StartMenu" @bind="Ubisoft.StartMenu" @onclick="() => Ubisoft.StartMenu_Toggle()"><label class="form-check-label" for="Steam_StartMenu"></label></div><label for="Steam_StartMenu">Start menu shortcut<br></label>
            </div>
            <div class="SettingsHeader">
                <hr><span>Tray settings</span>
                <hr>
            </div>
            <div class="columnSetting">
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_TrayStartup" @bind="Ubisoft.TrayStartup" @onclick="() => { Ubisoft.Task_Toggle(); }"><label class="form-check-label" for="Steam_TrayStartup"></label></div><label for="Steam_TrayStartup">Start with Windows<br></label>
            </div>
            <div class="form-text"><span>Max number of accounts to remember:</span><input type="number" id="Steam_TrayAccNumber" min="0" max="365" @bind="Ubisoft.TrayAccNumber"></div>
            <div class="SettingsHeader">
                <hr><span>General</span>
                <hr>
            </div>
            <div class="buttoncol"><button class="btn" id="Steam_PickFolder" type="button" @onclick="PickUbisoftFolder"><span>Pick Steam folder</span></button><button class="btn" id="Steam_CheckVAC" type="button" @onclick="ClearVacStatus"><span>Check account VAC status</span></button></div>
            <div class="buttoncol"><button class="btn" id="Steam_ResetSettings" type="button" @onclick="ClearSettings"><span>Reset settings</span></button><button class="btn" id="Steam_ResetImages" type="button" @onclick="ClearImages"><span>Reset images</span></button></div>
            <div class="SettingsHeader">
                <hr><span>Steam tools</span>
                <hr>
            </div>
            <div class="buttoncol"><button class="btn" id="Steam_OpenSteamFolder" type="button" @onclick="OpenUbisoftFolder"><span>Open Steam Folder</span></button></div>
            <div class="buttoncol col_close"><button class="btn btn_close" type="button" @onclick="SaveAndClose"><span>Close</span></button></div>
        </div>
    </div>
</div>
<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    public void SaveAndClose()
    {
        AppSett.SaveSettings();
        Ubisoft.SaveSettings();

        NavManager.NavigateTo("/Ubisoft");
    }
}
