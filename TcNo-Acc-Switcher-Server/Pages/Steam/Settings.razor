@page "/Steam/Settings"
@namespace TcNo_Acc_Switcher_Server.Pages.Steam
@inject NavigationManager _navManager
@{ AppData.SetActiveNavMan(_navManager); }
@inject Data.Settings.Steam _steam
@inject Data.AppSettings _appSett
@inject IJSRuntime _jsRuntime
@{ AppData.SetActiveIJsRuntime(_jsRuntime); }

<div class="container mainblock">
    <div class="row">
        <div class="col-md-12 col-lg-9 col-xl-8 mx-auto settingsCol">
            <toastarea class="toastarea" />
            <SharedSettings />


            <div class="SettingsHeader">
                <hr><span>General settings</span>
                <hr>
            </div>
            <div class="rowSetting">
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_DesktopShortcut" @bind="_steam.DesktopShortcut" @onclick="() => _steam.DesktopShortcut_Toggle()"><label class="form-check-label" for="Steam_DesktopShortcut"></label></div><label for="Steam_DesktopShortcut">Steam Switcher desktop shortcut<br></label>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_Admin" @bind="_steam.Admin"><label class="form-check-label" for="Steam_Admin"></label></div><label for="Steam_Admin">Run Steam as Admin<br></label>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_ShowSteamID" @bind="_steam.ShowSteamId"><label class="form-check-label" for="Steam_ShowSteamID"></label></div><label for="Steam_ShowSteamID">Show SteamID<br></label>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_ShowVAC" @bind="_steam.ShowVac"><label class="form-check-label" for="Steam_ShowVAC"></label></div><label for="Steam_ShowVAC">Show VAC Status<br></label>
            </div>
            <div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_ShowLimited" @bind="_steam.ShowLimited"><label class="form-check-label" for="Steam_ShowLimited"></label></div><label for="Steam_ShowLimited">Show Limited Status<br></label>
            </div>
            <div class="form-text"><span>Profile images expire after:</span><input type="number" id="Steam_ImageExpiryTime" min="0" max="365" @bind="_steam.ImageExpiryTime"><span>Days</span></div>


            <div class="SettingsHeader">
                <hr><span>Tray settings</span>
                <hr>
            </div>
            <div class="rowSetting">
                <div class="form-check"><input class="form-check-input" type="checkbox" id="Steam_TrayAccountName" @bind="_steam.TrayAccName"><label class="form-check-label" for="Steam_TrayAccountName"></label></div><label for="Steam_TrayAccountName">Show account name [not friend name]<br></label>
            </div>
            <div class="form-text"><span>Max number of accounts to remember:</span><input type="number" id="Steam_TrayAccNumber" min="0" max="365" @bind="_steam.TrayAccNumber"></div>


            <div class="SettingsHeader">
                <hr><span>General</span>
                <hr>
            </div>
            <div class="buttoncol"><button class="btn" id="Steam_PickFolder" type="button" @onclick="PickFolder"><span>Pick Steam folder</span></button><button class="btn" id="Steam_CheckVAC" type="button" @onclick="ClearVacStatus"><span>Check account VAC status</span></button></div>
            <div class="buttoncol"><button class="btn" id="Steam_ResetSettings" type="button" @onclick="ClearSettings"><span>Reset settings</span></button><button class="btn" id="Steam_ResetImages" type="button" @onclick="ClearImages"><span>Reset images</span></button></div>


            <div class="SettingsHeader">
                <hr><span>Other tools</span>
                <hr>
            </div>
            <div class="buttoncol"><button class="btn" type="button" @onclick='() => _navManager.NavigateTo("/Steam/RestoreForgotten")'><span>Restore forgotten account</span></button><button class="btn" type="button" @onclick="SteamSwitcherFuncs.ClearForgotten"><span>Clear forgotten accounts</span></button></div>
            <div class="buttoncol"><button class="btn" id="OpenFolder" type="button" @onclick="OpenFolder"><span>Open Steam Folder</span></button><button class="btn" id="Steam_AdvancedClearing" type="button" @onclick='() => _navManager.NavigateTo("/Steam/AdvancedClearing")'><span>Advanced cleaning...</span></button></div>
            <div class="buttoncol col_close"><button class="btn btn_close" type="button" @onclick="SaveAndClose"><span>Close</span></button></div>
        </div>
    </div>
</div>
<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    public void SaveAndClose()
    {
        _appSett.SaveSettings();
        _steam.SaveSettings();

        _navManager.NavigateTo("/Steam");
    }
}
